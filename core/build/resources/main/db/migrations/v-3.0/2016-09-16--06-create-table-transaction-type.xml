<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">
    <changeSet author="Olzhas.Pazyldayev" id="2016-09-16--07-create-table-transaction-type" objectQuotingStrategy="LEGACY">
        <sql splitStatements="true">
            DROP TABLE IF EXISTS core.transaction_type CASCADE;
        </sql>
        <createTable tableName="transaction_type" schemaName="core">
            <column name="id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="code" type="VARCHAR(200)"/>
            <column name="description" type="VARCHAR(500)"/>
        </createTable>
        <addPrimaryKey tableName="transaction_type" columnNames="id" constraintName="transaction_type_pkey"
                       schemaName="core"/>
        <addUniqueConstraint tableName="transaction_type" columnNames="code" constraintName="transaction_type_code_uk"
                             schemaName="core"/>
    </changeSet>
</databaseChangeLog>
