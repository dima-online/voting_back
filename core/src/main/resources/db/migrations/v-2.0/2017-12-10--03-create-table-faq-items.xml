<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">
    <changeSet author="Olzhas.Pazyldayev" id="2017-12-10--03-create-table-faq-items"
               objectQuotingStrategy="LEGACY">
        <sql splitStatements="true">
            DROP TABLE IF EXISTS core.faq_items CASCADE;
        </sql>
        <createTable tableName="faq_items" schemaName="core">
            <column name="id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="title" type="VARCHAR(5000)"/>
            <column name="description" type="VARCHAR(10000)"/>
            <column name="user_id" type="BIGINT"/>
            <column name="create_time" type="TIMESTAMP"/>
            <column name="status" type="VARCHAR(64)"/>
            <column name="faq_post_id" type="BIGINT"/>
            <column name="locale" type="VARCHAR(64)"/>
        </createTable>
        <addPrimaryKey columnNames="id" constraintName="faq_item_pkey" tableName="faq_items"
                       schemaName="core"/>
        <sql splitStatements="true">
            ALTER TABLE core.faq_items ADD CONSTRAINT "faq_items_user_fk"
            FOREIGN KEY (user_id) REFERENCES core.user(id) ON UPDATE NO ACTION ON DELETE NO ACTION;
            ALTER TABLE core.faq_items ADD CONSTRAINT "faq_items_faq_post_fk"
            FOREIGN KEY (faq_post_id) REFERENCES core.faq_posts(id) ON UPDATE NO ACTION ON DELETE NO ACTION;
        </sql>
    </changeSet>
</databaseChangeLog>